{
  "author": "Martin Nabhan",
  "dependencies": {
    "@aws-cdk/aws-dynamodb": "^1.87.1",
    "@aws-cdk/aws-events": "^1.87.1",
    "@aws-cdk/aws-events-targets": "^1.87.1",
    "@aws-cdk/aws-lambda-nodejs": "^1.87.1",
    "@aws-cdk/aws-s3": "^1.87.1",
    "@aws-cdk/core": "^1.87.1",
    "@types/async-retry": "^1.4.2",
    "@types/node-fetch": "^2.5.8",
    "async-retry": "^1.3.1",
    "aws-cdk": "^1.87.1",
    "aws-sdk": "^2.828.0",
    "date-fns": "^2.16.1",
    "env-var": "^7.0.0",
    "esbuild": "^0.8.38",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "dynamodb-admin": "^4.0.0",
    "dynamodb-local": "0.0.31",
    "nodemon": "^2.0.7",
    "run-func": "^1.0.5",
    "s3rver": "^3.6.1"
  },
  "description": "１日単位で見れるHacker News",
  "license": "MIT",
  "name": "hacker-mainichi-api",
  "scripts": {
    "bootstrap": "cdk bootstrap HackerMainichiAPI",
    "build:exportStories": "esbuild src/handlers/exportStories.ts --bundle --outfile=dist/exportStories.js --platform=node --sourcemap --target=node12.19.0",
    "build:saveStories": "esbuild src/handlers/saveStories.ts --bundle --outfile=dist/saveStories.js --platform=node --sourcemap --target=node12.19.0",
    "deploy": "cdk deploy HackerMainichiAPI",
    "dev:exportStories": "NODE_ENV=development NODE_OPTIONS=--enable-source-maps TZ=Asia/Tokyo nodemon --ext ts --watch src --exec \"npm run build:exportStories && run-func ./dist/exportStories.js handler\"",
    "dev:saveStories": "NODE_ENV=development NODE_OPTIONS=--enable-source-maps TZ=Asia/Tokyo nodemon --ext ts --watch src --exec \"npm run build:saveStories && run-func ./dist/saveStories.js handler\"",
    "diff": "cdk diff HackerMainichiAPI",
    "dynamodb": "concurrently dynamodb-admin dynamodb-local",
    "fix": "prettier --write . && tsc --noEmit",
    "s3": "s3rver --directory ./s3/ --configure-bucket hacker-mainichi ./s3/cors.xml"
  },
  "version": "1.0.0"
}
